{
    "compilerOptions": {
        "strict": true,
        "allowUnreachableCode": false,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es2020",
            "dom.iterable"
        ],
        "module": "es2020",
        "moduleResolution": "bundler",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist",
        "removeComments": false,
        "sourceMap": true,
        "jsx": "react",
        "target": "es2020",
        "skipLibCheck": true,
        "paths": {
            "firebaseui-stencil/dist/components/*": [
                "../firebaseui-stencil/dist/components/*"
            ]
        }
    },
    "include": [
        "lib"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}