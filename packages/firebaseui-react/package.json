{
  "name": "@firebase-ui/react",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build:local": "pnpm run build && pnpm pack",
    "dev": "tsup --watch",
    "lint": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rimraf dist",
    "test:unit": "TEST_TYPE=unit vitest run tests/unit",
    "test:unit:watch": "TEST_TYPE=unit vitest tests/unit",
    "test:integration": "TEST_TYPE=integration vitest run tests/integration",
    "test:integration:watch": "TEST_TYPE=integration vitest tests/integration"
  },
  "peerDependencies": {
    "@firebase-ui/core": "workspace:*",
    "@firebase-ui/translations": "workspace:*",
    "@firebase-ui/styles": "workspace:*"
  },
  "dependencies": {
    "@nanostores/react": "^0.8.4",
    "@tanstack/react-form": "^0.41.3",
    "clsx": "^2.1.1",
    "firebase": "^11.2.0",
    "nanostores": "^0.11.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.0.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.3",
    "@testing-library/react": "^16.2.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.13.8",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "jsdom": "^26.0.0",
    "tsup": "^8.3.6",
    "typescript": "~5.6.2",
    "vite": "^6.0.5",
    "vitest": "^3.0.8",
    "vitest-tsconfig-paths": "^3.4.1"
  }
}
